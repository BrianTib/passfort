{
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "withGlobalTauri": true,
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "passfort",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "fs": {
                "all": false,
                "readFile": true,
                "writeFile": true,
                "readDir": true,
                "removeFile": true,
                "exists": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.passfort.dev",
            "longDescription": "Keep your passwords safe with PassFort",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 1080,
                "resizable": true,
                "title": "PassFort",
                "width": 1440,
                "minWidth": 1440,
                "minHeight": 1080
            }
        ]
    }
}
